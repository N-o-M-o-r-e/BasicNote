<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.security.question.AnswerActivity" android:tag="layout/activity_answer_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
        <View
            android:id="@+id/toolbar"
            style="@style/Status_Bar"
            tools:ignore="MissingConstraints"
            />


        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_back"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/title"
            style="@style/NUNITO_BOLD"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security Question"
            android:gravity="center"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="@+id/toolbar" />

        <TextView
            android:id="@+id/spinnerView"
            android:layout_width="0dp"
            android:layout_height="56dp"
            style="@style/NUNITO_REGULAR"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:maxLines="1"
            android:padding="12dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/background_selected_item"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="@id/toolbar"/>
        <EditText
            android:id="@+id/edtAnswer"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/type_your_answer"
            android:inputType=""
            android:background="@null"
            style="@style/NUNITO_REGULAR"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            app:layout_constraintTop_toBottomOf="@+id/spinnerView" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16sp"
            android:background="@color/Color_Text"
            app:layout_constraintEnd_toEndOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="@+id/toolbar"
            app:layout_constraintTop_toBottomOf="@id/edtAnswer" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOk"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="72dp"
            android:text="@string/check_it_now"
            android:textAllCaps="false"
            style="@style/NUNITO_BOLD"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/background_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.43333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
         